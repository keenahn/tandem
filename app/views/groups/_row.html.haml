-# expects group to be passed in as a local
%tr
  -# %td= group.id
  %td= link_to group.name, group
  %td= group.description
  %td= group.time_zone
  %td= l group.created_at, format: :long
  %td
    = link_to group_members_path(group), class: "btn btn-xs", title: "#{t(".show", default: t("helpers.links.show"))}" do
      = glyph "user"
  %td
    = link_to group_pairs_path(group), class: "btn btn-xs", title: "#{t(".show", default: t("helpers.links.show"))}" do
      = glyph "user"
      = glyph "user"
  %td
    = link_to group, class: "btn btn-xs", title: "#{t(".show", default: t("helpers.links.show"))}" do
      = glyph "info-sign"
    = link_to edit_group_path(group), class: "btn btn-xs", title: "#{t(".edit", default: t("helpers.links.edit"))}" do
      = glyph "pencil"
    = link_to group, method: :delete, data: { confirm: t(".confirm", default: t("helpers.links.confirm", default: "Are you sure?")) }, class: "btn btn-xs", title: "#{t(".destroy", default: t("helpers.links.destroy"))}" do
      = glyph "remove"
