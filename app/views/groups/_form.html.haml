= form_for @group, html: { class: "form-horizontal form-model" } do |f|
  .form-group
    = f.label :name, class: "control-label col-md-2"
    .col-md-10
      = f.text_field :name, class: "text-field form-control"
  .form-group
    = f.label :description, class: "control-label col-md-2"
    .col-md-10
      = f.text_field :description, class: "text-field form-control"
  .form-group
    = f.label :time_zone, class: "control-label col-md-2"
    .col-md-10
      = f.time_zone_select( :time_zone, ActiveSupport::TimeZone.us_zones, default: Tandem::Consts::DEFAULT_TIMEZONE)

  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, class: "btn btn-primary"
      = link_to t(".cancel", default: t("helpers.links.cancel")), groups_path, class: "btn btn-default"
