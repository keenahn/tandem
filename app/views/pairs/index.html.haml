%h1 Listing pairs

%table.table.table-striped
  %thead
    %tr
      %th Group
      %th Member 1
      %th Member 2
      %th= t '.actions', default: t("helpers.actions")

  %tbody
    - @pairs.each do |pair|
      %tr
        %td= pair.group
        %td= pair.member_1
        %td= pair.member_2
        %td
          = link_to pair, class: "btn btn-xs", title: "#{t(".show", default: t("helpers.links.show"))}" do
            = glyph "info-sign"
          = link_to  edit_pair_path(pair), class: "btn btn-xs", title: "#{t(".edit", default: t("helpers.links.edit"))}" do
            = glyph "pencil"
          = link_to pair, method: :delete, data: { confirm: t(".confirm", default: t("helpers.links.confirm", default: "Are you sure?")) }, class: "btn btn-xs", title: "#{t(".destroy", default: t("helpers.links.destroy"))}" do
            = glyph "remove"

%br

= link_to t('.new', default: t("helpers.links.new")), new_pair_path, class: "btn btn-primary"
